{
	"manifest_version": 2,
	"name": "LinkedIn Scraper",
	"description": "This is an extension to scrape opened LinkedIn page",
	"version": "1.0",
	"author": "@leyla",
	"permissions": [
		"activeTab",
		"scripting",
		"tabs",
		"storage",
		"http://*/", 
		"https://*/"
	],
	"content_scripts": [
		{
			"matches": ["https://www.linkedin.com/*"],
			"js": ["content.js",
			"get_content_skills.js",
			"get_content_cert.js",
			"get_content_edu.js",
			"get_content_experience.js",
			"get_content_lang.js"]
		}
	],
	"background": {
		"scripts": ["dist/background.bundle.js"],
		"persistent": true
	},
	"browser_action": {
		"default_icon": "icon16.png",
		"default_popup": "popup.html"
	},
	"web_accessible_resources": [
		"skills.html",
		"skills.js",
		"popup.js",
		"popup.html",
		"customFields.js",
		"cert.js",
		"edu.js",
		"experience.js",
		"lang.js"
	]
}
