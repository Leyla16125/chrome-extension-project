{
	"manifest_version": 2,

	"name": "LinkedIn Scraper",
	"description": "This is an extension to scrape opened LinkedIn page",
	"version": "1.0",
	"author": "@leyla",

	"background": {
		"scripts": ["popup.js"],
		"persistent": true
	},

	"permissions": [
        "tabs",
        "http://*/",
        "https://*/"
    ],
	"browser_action": {
		"default_icon": "icon16.png",
		"default_popup": "popup.html"
	}
}