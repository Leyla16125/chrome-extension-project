{
	"manifest_version": 2,
	"name": "LinkedIn Scraper",
	"description": "This is an extension to scrape opened LinkedIn page",
	"version": "1.0",
	"author": "@leyla",
	"permissions": [
		"tabs",
		"storage",
		"http://*/",
		"https://*/"
	],
	"content_scripts": [
		{
			"matches": ["https://www.linkedin.com/*"],
			"js": ["content.js", "get_content_skills.js"]
		}
	],
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"browser_action": {
		"default_icon": "icon16.png",
		"default_popup": "popup.html"
	},
	"web_accessible_resources": [
		"skills.html",
		"skills.js",
		"popup.js",
		"popup.html",
		"customFields.html",
		"customFields.js"
	]
}
